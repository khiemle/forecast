<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.khiemle.nab">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:name=".ForecastApplication"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Nab">
        <activity android:name=".presentation.FragmentHostActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.AActivity"
            android:label="Activity A"
            android:launchMode="singleInstance">
        </activity>
        <activity
            android:name=".presentation.BActivity"
            android:label="Activity B"
            android:launchMode="singleTask" />
        <activity
            android:name=".presentation.CActivity"
            android:label="Activity C" />
        <activity
            android:name=".presentation.DActivity"
            android:label="Activity D"
            android:launchMode="singleTop" />
        <activity android:name=".presentation.MainActivity">

        </activity>

        <service android:name=".presentation.MyIntentService">

        </service>
    </application>

</manifest>